        android:textStyle="bold"
        android:layout_gravity="top|end"
        android:id="@+id/minor_notification_text"
        android:textColor="@android:color/white"
        android:gravity="center"
        tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

</FrameLayout>